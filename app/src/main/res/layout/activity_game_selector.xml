<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ronald.counter.gameSelector"
    android:configChanges="orientation"
    android:screenOrientation="portrait"
    android:background="@color/lightPastelOrange">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:background="@color/lightPastelBlue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DuoCounter"
            android:id="@+id/gameSelText"
            android:textSize="50dp"
            android:layout_marginTop="79dp"
            android:textColor="@color/pastelBlue"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yu-Gi-Oh"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/yghButtonStart"
            android:textColor="@color/pastelBlue"
            android:textSize="20dp"
            android:layout_below="@+id/gameSelText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="147dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magic: The Gathering"
            android:id="@+id/mtgButtonStart"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/yghButtonStart"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/pastelBlue"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:text="20 life"
            android:id="@+id/mtg20Start"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/pastelBlue"
            android:layout_marginTop="21dp"
            android:textSize="20dp"
            android:layout_below="@+id/mtgButtonStart"
            android:layout_alignLeft="@+id/mtgButtonStart"
            android:layout_alignStart="@+id/mtgButtonStart" />

        <Button
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:text="40 life"
            android:id="@+id/mtg40Start"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/pastelBlue"
            android:textSize="20dp"
            android:layout_alignTop="@+id/mtg20Start"
            android:layout_alignRight="@+id/mtgButtonStart"
            android:layout_alignEnd="@+id/mtgButtonStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a game"
            android:id="@+id/gmSelector"
            android:textColor="@color/pastelOrange"
            android:textSize="30dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/gameSelText"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
